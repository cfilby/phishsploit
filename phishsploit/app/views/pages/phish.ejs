<% include ../template/head %>

<div class="row">
    <div class="card">
      <div class="card-content">
        <span class="card-title grey-text text-darken-4 truncate"><%= phish.fullUrl %></span>
        <div class="row">
          <div class="col s12">
            <ul class="tabs">
              <li class="tab col s3"><a class="active" href="#info">Info</a></li>
              <li class="tab col s3"><a href="#parts">Path Parts</a></li>
              <li class="tab col s3"><a href="#exploits">Exploits</a></li>
            </ul>
          </div>

          <div id="info" class="col s12">
            <ul class="collection with-header">
              <li class="collection-header"><h5>Phish Info</h5></li>
              <li class="collection-item">
                <span class="title"><strong>Report Date</strong></span>
                <p><%= new Date(phish.date).toDateString() %></p>
              </li>

              <li class="collection-item">
                <span class="title"><strong>URL</strong></span>
                <p><%= phish.fullUrl %></p>
              </li>
            </ul>
          </div>

          <div id="parts" class="col s12">
            <% if (parts.length) { %>
              <ul class="collection with-header">
                <li class="collection-header"><h5>Url Path Substrings</h5></li>
                <% parts.forEach(function(part) { %>
                  <li class="collection-item"><%= part.pathPart %></li>
                <% }); %>
              </ul>
            <% } else { %>
              <h5 class="center">No url path parts for this phish.</h5>
            <% } %>
          </div>

          <div id="exploits" class="col s12">
            <% if (exploits.length) { %>
              <ul class="collection with-header">
                <div class="collection-header"><h5>Related Exploits</h5></li>
                <% exploits.forEach(function(exploit) {%>
                  <a href="/exploits/specific/<%= exploit.exploitId %>" class="collection-item truncate"><%= exploit.description %></a>
                <% }); %>
              </div>
            <% } else { %>
              <h5 class="center">No Exploits correspond to this Phish.</h5>
            <% } %>
          </div>
        </div>

      </div>
    </div>
</div>

<% include ../template/foot %>
